<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="@color/itemBack"
    android:paddingVertical="8dp"
    android:layout_marginBottom="8dp"
    android:padding="16dp">

    <!-- Order Icon (Left) -->
    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/order_icon"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:src="@drawable/ic_table"
        android:layout_gravity="center_vertical"
        android:layout_marginEnd="16dp" />

    <!-- Details Section (Center) -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="1"
        android:layout_marginEnd="16dp">

        <!-- Table Number -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="4dp">

            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_name"
                android:layout_marginEnd="8dp" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/TXT_tableNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="tableNumber_placeholder"
                android:textColor="@color/black"
                android:textSize="16sp" />
        </LinearLayout>

        <!-- Capacity -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="4dp">

            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_price"
                android:layout_marginEnd="8dp" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/TXT_capacity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="capacity_placeholder"
                android:textColor="@color/black"
                android:textSize="16sp" />
        </LinearLayout>

        <!-- Table Description -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="4dp">

            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_notes"
                android:layout_marginEnd="8dp" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/TXT_locationDesc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="locationDesc_placeholder"
                android:textColor="@color/black"
                android:textSize="16sp" />
        </LinearLayout>

    </LinearLayout>
</LinearLayout>