<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/back"
    android:padding="16dp">

    <!-- Title TextView -->
    <TextView
        android:id="@+id/descriptionTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="LOGIN"
        android:textColor="#000000"
        android:textSize="32sp"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_alignParentTop="true"
        android:shadowColor="#000000"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="3"/>

    <!-- Main Content Layout -->
    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@id/descriptionTextView"
        android:layout_above="@+id/bottomLayout"
        android:layout_marginTop="32dp">

        <!-- Superapp Label and TextInputEditText -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/LBL_superapp"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="superapp:"
                android:textColor="#000000"
                android:textSize="18sp"
                android:gravity="end"
                android:paddingEnd="8dp"/>

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/TXT_superapp"
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="wrap_content"
                android:text="2024b.aviad.korakin"
                android:textColor="#000000"
                android:textSize="18sp"
                android:backgroundTint="#000000"/>

        </LinearLayout>

        <!-- Email Label and TextInputEditText -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="16dp">

            <TextView
                android:id="@+id/LBL_email"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="email:"
                android:textColor="#000000"
                android:textSize="18sp"
                android:gravity="end"
                android:paddingEnd="8dp"/>

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/TXT_email"
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="wrap_content"
                android:text="example@example.example"
                android:textColor="#000000"
                android:textSize="18sp"
                android:backgroundTint="#000000"/>

        </LinearLayout>

        <!-- LOGIN Button -->
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/BTN_login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="LOGIN"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="bold"
            android:backgroundTint="@color/button"
            android:paddingVertical="12dp"
            android:layout_marginTop="16dp"/>

    </androidx.appcompat.widget.LinearLayoutCompat>

    <!-- Bottom Layout -->
    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/bottomLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentBottom="true"
        android:gravity="center_horizontal">

        <!-- "Not a member? JOIN NOW!" TextView -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:text="Not a member? JOIN NOW!"
            android:textSize="16sp"
            android:gravity="center"
            app:autoSizeTextType="uniform"/>

        <!-- REGISTER Button -->
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/BTN_goRegister"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="REGISTER"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="bold"
            android:backgroundTint="@color/button"
            android:paddingVertical="12dp"
            android:layout_marginTop="8dp"/>

    </androidx.appcompat.widget.LinearLayoutCompat>

</RelativeLayout>
